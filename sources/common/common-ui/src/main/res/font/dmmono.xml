<font-family
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <font
        android:font="@font/dmmono_light"
        android:fontStyle="normal"
        android:fontVariationSettings='"wght" 300'
        android:fontWeight="300"

        app:font="@font/dmmono_light"
        app:fontStyle="normal"
        app:fontVariationSettings='"wght" 300'
        app:fontWeight="300" />

    <font
        android:font="@font/dmmono_italic"
        android:fontStyle="italic"
        android:fontVariationSettings='"wght" 400'
        android:fontWeight="400"

        app:font="@font/dmmono_italic"
        app:fontStyle="italic"
        app:fontVariationSettings='"wght" 400'
        app:fontWeight="400" />

    <font
        android:font="@font/dmmono_regular"
        android:fontStyle="normal"
        android:fontVariationSettings='"wght" 400'
        android:fontWeight="400"

        app:font="@font/dmmono_regular"
        app:fontStyle="normal"
        app:fontVariationSettings='"wght" 400'
        app:fontWeight="400" />

    <font
        android:font="@font/dmmono_medium"
        android:fontStyle="normal"
        android:fontVariationSettings='"wght" 500'
        android:fontWeight="500"

        app:font="@font/dmmono_medium"
        app:fontStyle="normal"
        app:fontVariationSettings='"wght" 500'
        app:fontWeight="500" />

</font-family>
